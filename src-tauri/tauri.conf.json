{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tools-management",
  "version": "0.1.0",
  "identifier": "tools-management",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:app.db"]
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Tools Management",
        "minWidth": 1200,
        "minHeight": 730,
        "width": 1200,
        "height": 730
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
